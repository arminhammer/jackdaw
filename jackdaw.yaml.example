# Jackdaw Configuration File Example
# Place this file as 'jackdaw.yaml' in the current directory or at ~/.config/jackdaw/jackdaw.yaml
#
# Configuration precedence (highest to lowest):
# 1. Command line arguments
# 2. Environment variables (with JACKDAW__ prefix, e.g., JACKDAW__RUN__VERBOSE=true)
# 3. This config file
# 4. Built-in defaults

# Configuration for the 'run' command
run:
  # Path to the durable persistence database
  durable_db: "workflow.db"

  # Path to the cache database (if different from durable db)
  # cache_db: "cache.db"

  # Run workflows in parallel
  parallel: false

  # Enable verbose output
  verbose: false

  # Skip cache hits (force re-execution)
  no_cache: false

  # Generate workflow visualization after execution
  visualize: false

  # Visualization tool to use (graphviz or d2)
  viz_tool: "d2"

  # Visualization output format (svg, png, pdf, ascii)
  viz_format: "svg"

  # Visualization output path (optional)
  # viz_output: "output.svg"

# Configuration for the 'validate' command
validate:
  # Show verbose output including all expressions checked
  verbose: false

# Configuration for the 'visualize' command
visualize:
  # Path to the durable persistence database
  durable_db: "workflow.db"

  # Visualization tool to use (graphviz or d2)
  tool: "graphviz"

  # Output format (svg, png, pdf, ascii)
  format: "svg"
